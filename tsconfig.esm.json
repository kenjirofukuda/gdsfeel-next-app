{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "lib": ["ESNext"],
    "types": ["node"],
    "outDir": "dist/esm",
    "declaration": true,
    "declarationMap": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["./src"],
  "exclude": [
    "node_modules",
    "./src/app/*",
    "./src/gds/browser/*",
    "./src/gds/server/*",
    "./**/*.tsx"
  ]
}
